<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewArgentina"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            card_view:cardBackgroundColor="#00aaff"
            card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageViewArgentina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/argentina" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Argentina"
                android:textSize="30sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewCanada"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/cardViewArgentina"
            card_view:cardBackgroundColor="#ff0000"
            card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/ImageViewCanada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/canada" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CanadÃ¡"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewBrasil"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/cardViewCanada"
            card_view:cardBackgroundColor="#00ff48"
            card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageViewBrasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/brasil" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Brasil"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>